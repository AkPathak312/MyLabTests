<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutRuban">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="5dp">
    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="16dp"
        android:elevation="10dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/doclogo"
                android:layout_margin="2dp"
                android:layout_gravity="bottom|end"/>
            <TextView
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Contact Us"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:src="@drawable/doclogo"
                android:layout_gravity="bottom|end"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Ruban Memorial Hospital"
            android:textColor="#000"
            android:layout_margin="5dp"/>
        <TextView
            android:background="@drawable/rectangle"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="19, Patliputra Colony, Near Patliputra Golamber\nPatna - 800013 ,Bihar, India"
            android:textColor="#000"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Directions"
            android:layout_margin="10dp"
            android:background="#0000ff"
            android:textColor="#fff"/>
        <androidx.cardview.widget.CardView
            app:cardElevation="10dp"
            app:cardCornerRadius="16dp"
            android:elevation="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/doclogo"
                    android:layout_margin="2dp"
                    android:layout_gravity="bottom|end"/>
                <TextView
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Feedback/Query"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/doclogo"
                    android:layout_gravity="bottom|end"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:drawableRight="@drawable/asterisk"
            android:text="Name : "/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Your Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:drawableRight="@drawable/asterisk"
            android:text="Email ID : "/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Email Id..."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:drawableRight="@drawable/asterisk"
            android:text="Query/Feedback : "/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Write your Query here...\nAtleast should be of 40 words.\n(40-200 Words)"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_margin="10dp"
            android:background="#ff0000"
            android:textColor="#fff"/>

    </LinearLayout>

</ScrollView>